<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow the app to be run after notarization (hardened runtime) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <false/>

    <!-- Allow reading user-selected files -->
    <key>com.apple.security.files.user-selected.read-only</key>
    <true/>

    <!-- Allow reading files in user's home directory (for ~/.claude and ~/.codex) -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Allow network access for potential future features -->
    <key>com.apple.security.network.client</key>
    <true/>
</dict>
</plist>
